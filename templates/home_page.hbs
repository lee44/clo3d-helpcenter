<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<div class="container">
  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
            {{#isnt name 'Reference'}}
            <li class="blocks-item">
              {{#is name 'LESSONS'}}
              <img class="icon" src="{{../settings.lessons_icon}}" alt="{{t 'lessons_icon' name="lessons_icon"}}" />
              {{/is}}
              {{#is name 'Manual'}}
              <img class="icon" src="{{../settings.manual_icon}}" alt="{{t 'manual_icon' name="manual_icon"}}" />
              {{/is}}
              {{#is name 'FAQ'}}
              <img class="icon" src="{{../settings.helpcenter_icon}}" alt="{{t 'helpcenter_icon' name="helpcenter_icon"}}" />
              {{/is}}
              <a href='{{url}}' class="blocks-item-link">
                <span class="blocks-item-title">{{name}}</span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </a>
            </li>
            {{/isnt}}
          {{else}}
            {{#each sections}}
            <li class="blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                <span class="blocks-item-title">
                  {{name}}
                </span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </a>
            </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

    {{#if promoted_articles}}
    <section class="articles">
      <h2>{{t 'promoted_articles'}}</h2>
      <ul class="article-list promoted-articles">
        {{#each promoted_articles}}
        <li class="promoted-articles-item">
          <a href="{{url}}">
            {{title}}

            {{#if internal}}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16"
              class="icon-lock" title="{{t 'internal'}}">
              <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1" />
              <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5" />
            </svg>
            {{/if}}
          </a>
        </li>
        {{/each}}
      </ul>
    </section>
    {{/if}}
  </section>
</div>
<div class="community-bg">
  <div class="container">
    {{#if help_center.community_enabled}}
    <section class="section home-section community">
      <div>
        <h2>{{t 'community'}}</h2>
        <span>Join our fast-growing design community.</span>
      </div>
      <div class="community-link-container">
        {{#link 'community' class='community-link'}}
          LEARN MORE
        <img class="community-icon" src="{{settings.right_arrow_icon}}" alt="{{t 'right_arrow_icon' name="right_arrow_icon"}}" />
        {{/link}}
      </div>
    </section>
    {{/if}}
  </div>
</div>

<div class="container">
  <section class="section home-section activity">
    {{#if settings.show_recent_activity}}
    {{recent_activity}}
    {{/if}}
  </section>
</div>

<div class="container">
  <div class="learn-more-bg">
    <span class="learn-more-title">Not finding what you need?</span>
    <span class="learn-more-description">Interact with our CLO users around the world and get instant help!</span>
    <a href="" class="learn-more-anchor"><button class="learn-more-btn">LEARN MORE</button></a>
  </div>
</div>

